<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/logoHolder"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageLogoView"
            android:src="@drawable/logo_without_tagline"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
             />
    </RelativeLayout>



    <ImageButton
        android:id="@+id/fb_login_button"
        android:src="@drawable/let_start_facebook_login"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:layout_above="@+id/loginTexrView"
        android:layout_centerHorizontal="true"
        android:background="@null"/>

    <TextView
        android:id="@+id/loginTexrView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="By continuing you agree to our Terms and Privacy Policy"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="10sp"
        />



</RelativeLayout>
