<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slides"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/onBoarding_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#fff"
        tools:text="Ego shows you the profiles of the people around you."
        android:layout_above="@+id/onBoardingImage"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <ImageView
        android:id="@+id/onBoardingImage"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        tools:src="@drawable/onboarding_photos_1"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <RelativeLayout
        android:id="@+id/onBoardingFullScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/thumbsUp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/thumbs_up"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/text2"
            android:layout_marginBottom="35dp"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#fff"
            tools:text="Let's get started!"
            android:layout_centerInParent="true"
            android:layout_marginBottom="35dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />

        <ImageButton
            android:id="@+id/finishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/finished_button"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            />


    </RelativeLayout>



</RelativeLayout>